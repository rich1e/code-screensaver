{
  "name": "code-screensaver",
  "displayName": "Code Screensaver",
  "description": "When you leave your desk, it shows a cool Matrix-style animation to hide your code from prying eyes.",
  "version": "0.1.0",
  "publisher": "rich1e",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/rich1e/code-screensaver.git"
  },
  "bugs": {
    "url": "https://github.com/rich1e/code-screensaver/issues"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onCommand:matrixOverlay.start"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "matrixOverlay.start",
        "title": "Matrix Overlay: Toggle"
      }
    ],
    "configuration": {
      "title": "Matrix Overlay",
      "properties": {
        "matrixOverlay.opacity": {
          "type": "number",
          "default": 0.05,
          "minimum": 0.01,
          "maximum": 0.3,
          "description": "Trail fade opacity (lower = longer trails)"
        },
        "matrixOverlay.fps": {
          "type": "number",
          "default": 30,
          "minimum": 10,
          "maximum": 60,
          "description": "Animation frame rate"
        },
        "matrixOverlay.fontSize": {
          "type": "number",
          "default": 16,
          "minimum": 10,
          "maximum": 32,
          "description": "Font size of characters"
        },
        "matrixOverlay.immersiveFullScreen": {
          "type": "boolean",
          "default": false,
          "description": "Enter VS Code fullscreen when immersive mode starts"
        }
      }
    }
  }
}
